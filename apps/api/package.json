{
  "name": "@youde/api",
  "version": "0.0.1",
  "author": "Javionlog",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "tsc -b && vite build",
    "preview": "pnpm run build && wrangler dev",
    "deploy": "pnpm run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "better-auth:generate": "pnpx @better-auth/cli generate --config ./src/modules/auth/index.ts --output ./src/db/schemas/auth.ts",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate:dev": "cross-env NODE_ENV=dev drizzle-kit migrate",
    "drizzle:migrate:prd": "cross-env NODE_ENV=prd drizzle-kit migrate"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@youde/typescript-config": "workspace:^",
    "drizzle-kit": "^0.31.1"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.19.8",
    "@neondatabase/serverless": "^1.0.1",
    "@scalar/hono-api-reference": "^0.9.5",
    "better-auth": "^1.2.9",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.1"
  }
}
