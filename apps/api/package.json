{
  "name": "@youde/api",
  "version": "0.0.1",
  "author": "Javionlog",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=dev bun --bunx --watch src/main.ts",
    "build": "cross-env NODE_ENV=prod bun build src/main.ts --target bun --outdir ./dist",
    "preview": "cross-env NODE_ENV=dev bun dist/index.js",
    "better-auth:generate": "pnpx @better-auth/cli generate --config ./src/modules/auth/index.ts --output ./src/db/schemas/auth.ts",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate:dev": "cross-env NODE_ENV=dev drizzle-kit migrate",
    "drizzle:migrate:prod": "cross-env NODE_ENV=prod drizzle-kit migrate"
  },
  "devDependencies": {
    "@types/bun": "^1.2.18",
    "@youde/typescript-config": "workspace:^",
    "drizzle-kit": "^0.31.4"
  },
  "dependencies": {
    "@elysiajs/static": "^1.3.0",
    "@elysiajs/swagger": "^1.3.1",
    "@neondatabase/serverless": "^1.0.1",
    "better-auth": "^1.2.12",
    "drizzle-orm": "^0.44.3",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.3.5"
  }
}
