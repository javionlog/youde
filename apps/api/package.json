{
  "name": "@youde/api",
  "version": "0.0.1",
  "author": "Javionlog",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./hc": {
      "import": {
        "types": "./dist/hc.d.ts",
        "default": "./dist/hc.js"
      }
    }
  },
  "scripts": {
    "dev": "wrangler dev src/index.ts --env dev",
    "build": "tsc -b",
    "deploy": "pnpm run build && wrangler deploy --env prod",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "better-auth:generate": "pnpx @better-auth/cli generate --config ./src/modules/auth/lib/better-auth/index.ts --output ./src/db/schemas/auth.ts",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "@youde/admin": "workspace:^",
    "@youde/typescript-config": "workspace:^",
    "drizzle-kit": "^0.31.1"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.19.8",
    "@neondatabase/serverless": "^1.0.1",
    "@scalar/hono-api-reference": "^0.9.3",
    "better-auth": "^1.2.9",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11"
  }
}
